# Example environment variables for YantraX backend
# To enable live market data set MARKET_DATA_SOURCE=live
# If using Alpha Vantage, set ALPHA_VANTAGE_KEY=<your_key>

# Set to 'live' to prefer live sources (Alpha Vantage if key present, else yfinance)
MARKET_DATA_SOURCE=live

# Alpha Vantage API key (optional). If not provided, yfinance will be used.
ALPHA_VANTAGE_KEY=

# Cache timeout for market data (seconds)
MARKET_DATA_CACHE_SECONDS=300

# Per-request timeout for market data HTTP calls (seconds)
MARKET_DATA_REQUEST_TIMEOUT=5.0

# YantraX RL Backend Environment Configuration

# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=production
SECRET_KEY=yantrax-rl-production-key-change-in-production

# Server Configuration
PORT=5000
HOST=0.0.0.0
WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=yantrax_backend.log

# Market Data Configuration
CACHE_TIMEOUT=300
MAX_SYMBOLS_PER_REQUEST=20
# MARKET_DATA_SOURCE: 'yfinance' (default) or 'alpha_vantage'
MARKET_DATA_SOURCE=yfinance
# Alpha Vantage API key (optional; set when using alpha_vantage)
ALPHA_VANTAGE_KEY=
# Market data request timeout (seconds)
MARKET_DATA_REQUEST_TIMEOUT=10

# Feature Flags
ENABLE_DETAILED_LOGGING=true
ENABLE_MOCK_DATA=true
ENABLE_HEALTH_CHECKS=true

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# Perplexity Intelligence API (for real-time market analysis)
# Get your key at: https://www.perplexity.ai/account/api/keys
PERPLEXITY_API_KEY=pplx-your_key_here

