{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "https://yantrax-api.onrender.com/api/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
